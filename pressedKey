<body>

    <div id = "t"> </div>
    <div id = "h"></div>
    

<script>
  let pKey = document.querySelector("#t");
  let pKeyChar = document.querySelector("#h");

  document.onkeypress = function(event) {
      pKey.innerHTML = event.keyCode; 
      pKeyChar.innerHTML = String.fromCharCode(event.keyCode);
  }

</script>


</body>
